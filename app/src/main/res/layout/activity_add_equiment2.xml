<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_two.AddEquiment2"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/layerlist"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="请输入设备IMEI码"
            android:singleLine="true"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/sao"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add2_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/layerlist"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="请输入设备名称"
            android:singleLine="true"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add2_linear"
        android:layout_marginTop="20dp"
        android:text="注册"/>

</androidx.constraintlayout.widget.ConstraintLayout>