<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_list"
    android:layout_width="160dp"
    android:layout_height="125dp"
    android:background="@drawable/layerlist"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/device_icon1"
            android:layout_width="111dp"
            android:layout_height="85dp"
            android:src="@mipmap/shimge"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:src="@mipmap/fenxiang" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="115dp"
            android:layout_height="25dp"
            android:text="电子锁"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="16sp"
            android:background="@drawable/shape_view"
            android:ellipsize="end"
            android:lines="1"/>

        <ImageView
            android:id="@+id/icon_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/online"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/icon_online"/>

    </RelativeLayout>

</LinearLayout>